<Window x:Class="Spiel.Upgrades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spiel"
        mc:Ignorable="d"
        Title="Upgrades" Height="450" Width="800">
	<Grid>
		<Grid HorizontalAlignment="Left" Height="100" Margin="78,42,0,0" VerticalAlignment="Top" Width="100">
			<Button x:Name="button_speedMinus" Content="-" HorizontalAlignment="Left" Margin="0,32,0,0" VerticalAlignment="Top" Width="44" Click="Button_speedMinus_Click"/>
			<Button x:Name="button_speedPlus" Content="+" HorizontalAlignment="Left" Margin="56,32,0,0" VerticalAlignment="Top" Width="44" Click="Button_speedPlus_Click"/>
			<TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Speed" VerticalAlignment="Top" Height="23" Width="80" TextAlignment="Center" FontSize="18"/>
			<TextBlock x:Name="textBlock_speed" Margin="10,0,0,10" TextWrapping="Wrap" Text="1" VerticalAlignment="Bottom" FontSize="20" TextAlignment="Center" HorizontalAlignment="Left" Width="80"/>
		</Grid>
		<Button x:Name="button_OK" Content="OK" HorizontalAlignment="Left" Margin="352,302,0,0" VerticalAlignment="Top" Width="75" Click="Button_OK_Click"/>

	</Grid>
</Window>
